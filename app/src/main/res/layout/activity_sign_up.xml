<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="3"
    android:background="#060436"
    android:orientation="vertical"
    tools:context="com.deepjoshi.logibox.Sign_up">

    <TextView
        android:layout_marginTop="10dp"
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Sign Up"
        android:textSize="50dp"
        android:textColor="#aab1dada"
        android:fontFamily="cursive"
        android:id="@+id/textView" />

<LinearLayout
    android:layout_weight="1"
    android:gravity="center"
    android:paddingRight="50dp"
    android:paddingLeft="30dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <EditText
        android:hint="User Name"

        android:paddingTop="30dp"

        android:textColor="#aab1dada"
        android:textColorHint="#aab1dada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signup_ev_usnm"
        />



    <EditText
        android:hint="Email Id"

        android:paddingTop="30dp"

        android:textColor="#aab1dada"
        android:textColorHint="#aab1dada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signup_ev_eid"
        />






    <EditText
        android:hint="Address"

        android:paddingTop="30dp"


        android:textColor="#aab1dada"
        android:textColorHint="#aab1dada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signup_ev_add"
        />



    <EditText
        android:hint="Password"

        android:paddingTop="30dp"
        android:maxEms="1"
        android:maxLength="4"
        android:inputType="textWebPassword"
        android:textColor="#aab1dada"
        android:textColorHint="#aab1dada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signup_ev_pw"
        />



    <EditText
        android:hint="ContactNo"
android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signup_ev_cn"
        android:paddingTop="30dp"
        android:textColor="#aab1dada"
        android:textColorHint="#aab1dada"
        />
</LinearLayout>
    <Button

        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create an accoount "
        android:layout_gravity="center"
        android:background="#0000"
        android:textColor="#aab1dada"
        android:textSize="20dp"
        android:id="@+id/signup_createanaccount"
        />


</LinearLayout>
